---
import '../styles/theme.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
  heroImage?: string;
}

const { title, description, canonical, heroImage } = Astro.props;
const canonicalURL = canonical ? `https://www.triangledehumidifiers.com${canonical}` : undefined;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    {canonicalURL && <meta property="og:url" content={canonicalURL} />}
    <meta property="og:site_name" content="Triangle Dehumidifiers, LLC" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Performance -->
    <link rel="preload" as="image" href="/logo.webp" />
    {heroImage && <link rel="preload" as="image" href={heroImage} fetchpriority="high" />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body>
    <!-- TOP BAR -->
    <div class="topbar">
      <div class="container topbar-inner">
        <span class="topbar-left">Serving Raleigh, Wake County &amp; the Triangle Region</span>
        <span class="topbar-right">(919) 567-5329</span>
      </div>
    </div>

    <!-- HEADER -->
    <header class="site-header">
      <div class="container header-inner">
        <a href="/" class="site-logo">
          <img
            src="/logo.webp"
            alt="Triangle Dehumidifiers LLC  Crawlspace Dehumidifier Installation Raleigh NC"
            class="logo-img"
            width="79"
            height="65"
            fetchpriority="high"
          />
        </a>
        <nav aria-label="Primary Navigation">
          <ul class="site-nav" id="site-nav">
            <li><a href="/crawlspace-dehumidifier-installation-raleigh">Vented Crawlspace</a></li>
            <li>
              <a href="/encapsulated-crawlspace-dehumidifier-raleigh-nc">Encapsulated Crawlspace</a>
            </li>
            <li><a href="/whole-house-dehumidifier-raleigh">Whole-Home</a></li>
            <li><a href="/erv-installation-raleigh-nc">Ventilation</a></li>
            <li><a href="/crawlspace-mold-treatment-raleigh">Mold Treatment</a></li>
            <li><a href="/service-areas">Service Areas</a></li>
            <li><a href="/contact" class="nav-cta">Get Inspection</a></li>
          </ul>
          <button class="nav-toggle" id="nav-toggle" aria-label="Toggle menu">
            <span></span><span></span><span></span>
          </button>
        </nav>
      </div>
    </header>

    <!-- PAGE CONTENT -->
    <main>
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="site-footer">
      <div class="container">
        <div class="footer-nap">
          <p><strong>Triangle Dehumidifiers, LLC</strong></p>
          <p>Raleigh, NC</p>
          <p>Phone: (919) 567-5329</p>
          <p>Serving Raleigh, Holly Springs, Cary, Apex, Fuquay-Varina &amp; the Triangle region</p>
        </div>

        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/crawlspace-dehumidifier-installation-raleigh">Vented Crawlspace</a></li>
          <li>
            <a href="/encapsulated-crawlspace-dehumidifier-raleigh-nc">Encapsulated Crawlspace</a>
          </li>
          <li><a href="/whole-house-dehumidifier-raleigh">Whole-Home</a></li>
          <li><a href="/erv-installation-raleigh-nc">Ventilation</a></li>
          <li><a href="/crawlspace-mold-treatment-raleigh">Mold Treatment</a></li>
          <li><a href="/service-areas">Service Areas</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
        </ul>

        <p>&copy; {new Date().getFullYear()} Triangle Dehumidifiers, LLC. All rights reserved.</p>
      </div>
    </footer>

    <script>
      const toggle = document.getElementById('nav-toggle');
      const nav = document.getElementById('site-nav');
      toggle?.addEventListener('click', () => nav?.classList.toggle('open'));
    </script>
  </body>
</html>
