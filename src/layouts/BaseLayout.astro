---
import '../styles/theme.css';

interface Props {
  title: string;
  description: string;
  canonical?: string;
}

const { title, description, canonical } = Astro.props;
const canonicalURL = canonical ? `https://www.triangledehumidifiers.com${canonical}` : undefined;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <!-- TOP BAR -->
    <div class="topbar">
      <div class="container topbar-inner">
        <span class="topbar-left"
          >Serving Raleigh, Holly Springs, Cary, Apex &amp; Fuquay-Varina</span
        >
        <span class="topbar-right">(919) 555-0123</span>
      </div>
    </div>

    <!-- HEADER -->
    <header class="site-header">
      <div class="container header-inner">
        <a href="/" class="site-logo">
          <img src="/logo.png" alt="Triangle Dehumidifiers" class="logo-img" />
        </a>
        <nav>
          <ul class="site-nav" id="site-nav">
            <li><a href="/crawlspace-vented">Vented Crawlspace</a></li>
            <li>
              <a href="/crawlspace-encapsulated"
                >Encapsulated Crawlspace <li>
                  <a href="/crawlspace-vented">Vented Crawlspace</a>
                </li></a>
            </li>
            <li><a href="/whole-home">Whole-Home</a></li>
            <li><a href="/ventilation">Ventilation</a></li>
            <li><a href="/mold-treatment">Mold Treatment</a></li>
            <li><a href="/service-areas">Service Areas</a></li>
            <li><a href="/contact" class="nav-cta">Get Inspection</a></li>
          </ul>
          <button class="nav-toggle" id="nav-toggle" aria-label="Toggle menu">
            <span></span><span></span><span></span>
          </button>
        </nav>
      </div>
    </header>

    <!-- PAGE CONTENT -->
    <main>
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="site-footer">
      <div class="container">
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/crawlspace-vented">VentedCrawlspace</a></li>
          <li><a href="/crawlspace-encapsulated">Encapsulated Crawlspace</a></li>
          <li><a href="/whole-home">Whole-Home</a></li>
          <li><a href="/ventilation">Ventilation</a></li>
          <li><a href="/mold-treatment">Mold Treatment</a></li>
          <li><a href="/service-areas">Service Areas</a></li>
          <li><a href="/contact">Contact</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
        </ul>
        <p>&copy; {new Date().getFullYear()} Triangle Dehumidifiers, LLC. All rights reserved.</p>
      </div>
    </footer>

    <script>
      const toggle = document.getElementById('nav-toggle');
      const nav = document.getElementById('site-nav');
      toggle?.addEventListener('click', () => nav?.classList.toggle('open'));
    </script>
  </body>
</html>
